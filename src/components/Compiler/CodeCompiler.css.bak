.compiler-container {
  min-height: calc(100vh - 100px);
  background-color: #1a1a1a;
  color: white;
  padding: 2rem;
}

.editor-container {
  border-radius: 8px;
  overflow: hidden;
  margin: 1rem 0;
}

.language-selector {
  background-color: #333;
  color: white;
  padding: 0.5rem;
  border: 1px solid #555;
  border-radius: 4px;
  margin-right: 1rem;
}

.run-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background-color: #4CAF50;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.run-button:hover {
  background-color: #45a049;
}

.run-button:disabled {
  background-color: #666;
  cursor: not-allowed;
}

.output-container {
  background-color: #252525;
  border-radius: 8px;
  padding: 1rem;
  margin-top: 1rem;
}

.error-message {
  color: #ff6b6b;
}

.success-output {
  color: #69db7c;
}